!!===== rxvt-unicode (urxvt)
!!============================================

!URxvt.geometry:             [w]x[h]

URxvt.scrollBar_thickness:  3
URxvt.scrollBar_right:      true
URxvt.scrollBar_floating:   true
URxvt.scrollstyle:          plain
! rxvt / plain / next / xterm

!!=== cursol style
URxvt.cursorUnderline:      true
URxvt.cursorBlink:          true

!!=== start inputting -> disappear pointer
URxvt.pointerBlank:         true

!!=== alertion  sound -> visual bell
URxvt.visualBell:           true

!!=== baffa
URxvt.saveLines:            2000

!!=== after becoming out of cursol
URxvt.fading:               80

!! Font list and Spacing (xxx,yyy,zzz) (xft:font name-10 / xft:font name:pixelsize=10)
URxvt.font:                 xft:monospace:pixelsize=16
URxvt.lineSpace:            2
URxvt.letterSpace:          -1

!! Color Scheme and Opacity - gruvbox-dark https://github.com/morhetz/gruvbox
